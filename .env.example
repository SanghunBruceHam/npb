# NPB Dashboard Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
APP_NAME=NPB Dashboard
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=npb_dashboard_dev
DB_USER=npb_user
DB_PASSWORD=your_db_password_here

# Test Database (separate from development)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=npb_dashboard_test
TEST_DB_USER=npb_test_user
TEST_DB_PASSWORD=your_test_db_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External APIs
NPB_OFFICIAL_API_BASE=https://npb.jp
YAHOO_SPORTS_API_BASE=https://baseball.yahoo.co.jp
API_RATE_LIMIT_WINDOW=3600000
API_RATE_LIMIT_MAX=1000

# Security
JWT_SECRET=your_jwt_secret_key_here
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Crawler Settings
CRAWLER_INTERVAL=300000
CRAWLER_TIMEOUT=30000
CRAWLER_RETRY_COUNT=3
CRAWLER_USER_AGENT=NPB-Dashboard-Bot/1.0

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/
MAX_LOG_FILE_SIZE=10485760
MAX_LOG_FILES=5

# Cache Settings
CACHE_TTL=600
CACHE_MAX_SIZE=100

# Monitoring
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# External Services (Production only)
# CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
# CLOUDFLARE_API_TOKEN=your_cloudflare_token
# SENTRY_DSN=your_sentry_dsn_here

# Development Tools
DEBUG=npb:*
MOCK_DATA_ENABLED=false