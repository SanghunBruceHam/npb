{
  "name": "npb-magic-number-calculator",
  "version": "2.0.0",
  "description": "🏆 NPB 매직넘버 계산기 - 2025 NPB 리그 실시간 매직넘버, 플레이오프 진출 조건 계산 및 자동화 시스템",
  "main": "magic-number/js/process-season-data.js",
  "homepage": "https://npb-dashboard.co.kr/",
  "repository": {
    "type": "git",
    "url": "https://github.com/SanghunBruceHam/npb.git"
  },
  "scripts": {
    "process": "node scripts/runner.js magic-number/js/process-season-data.js",
    "update-data": "node scripts/runner.js magic-number/js/process-season-data.js && echo '✅ NPB 데이터 업데이트 완료!'",
    "crawl": "node scripts/runner.js magic-number/crawlers/kbo-python-working-crawler.py",
    "snapshot": "node scripts/runner.js magic-number/js/daily-snapshot.js snapshot",
    "history": "node scripts/runner.js magic-number/js/daily-snapshot.js history",
    "trend": "node scripts/runner.js magic-number/js/daily-snapshot.js trend",
    "analysis": "npm run enhanced-dashboard && npm run weekly-analysis && npm run clutch-analysis && npm run home-away-analysis && npm run series-analysis",
    "enhanced-dashboard": "node scripts/runner.js magic-number/js/generate-enhanced-dashboard.js",
    "weekly-analysis": "node scripts/runner.js magic-number/js/weekly-analysis.js", 
    "clutch-analysis": "node scripts/runner.js magic-number/js/clutch-analysis.js",
    "home-away-analysis": "node scripts/runner.js magic-number/js/home-away-analysis.js",
    "series-analysis": "node scripts/runner.js magic-number/js/series-analysis.js",
    "weekly-game-analysis": "node scripts/runner.js magic-number/js/weekly-game-analysis.js",
    "rank-matrix": "node scripts/runner.js magic-number/js/calculate-magic-numbers.js",
    "parse-season-data": "node scripts/runner.js magic-number/js/parse-season-data.js",
    "database-update": "node scripts/runner.js magic-number/js/enhanced-kbo-database.js",
    "full-update": "npm run process && npm run database-update && npm run analysis && npm run snapshot && echo '🎉 전체 업데이트 완료!'",
    "backup": "node scripts/runner.js magic-number/js/backup-manager.js backup",
    "backup-verify": "node scripts/runner.js magic-number/js/backup-manager.js verify",
    "backup-list": "node scripts/runner.js magic-number/js/backup-manager.js list",
    "serve": "npx http-server magic-number -p 8080",
    "test": "node scripts/test-paths.js",
    "test-paths": "node scripts/test-cross-platform-paths.js",
    "validate": "node scripts/runner.js --help",
    "help": "node scripts/runner.js --help"
  },
  "keywords": [
    "npb",
    "baseball",
    "magic-number",
    "playoff",
    "sports-data",
    "scraping",
    "automation",
    "github-actions",
    "japanese-baseball",
    "pwa",
    "calculator"
  ],
  "author": "SanghunBruceHam",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "puppeteer": "^24.15.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  }
}
