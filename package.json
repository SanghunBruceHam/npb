{
  "name": "npb-dashboard",
  "version": "1.0.0",
  "description": "NPB (Nippon Professional Baseball) Dashboard - 일본프로야구 데이터 분석 플랫폼",
  "main": "index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js --ignore frontend/",
    "dev:frontend": "cd frontend && python -m http.server 8080",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "npm run lint && npm run test && npm run build:frontend",
    "build:frontend": "echo 'Building frontend...' && npm run minify:css && npm run minify:js",
    "build:docs": "echo 'Building documentation...'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:backend": "jest server/",
    "test:frontend": "jest frontend/",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration/",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint server/ frontend/js/ --ext .js",
    "lint:css": "stylelint 'frontend/css/**/*.css'",
    "lint:fix": "eslint server/ frontend/js/ --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,css}\"",
    "minify:css": "cleancss -o frontend/dist/style.min.css frontend/css/*.css",
    "minify:js": "terser frontend/js/**/*.js -o frontend/dist/app.min.js",
    "crawler:start": "python crawler/main_crawler.py",
    "crawler:test": "python -m pytest crawler/tests/",
    "db:migrate": "node server/database/migrate.js",
    "db:seed": "node server/database/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "db:status": "node -e \"require('./server/database/connection').testConnection()\"",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "clean": "rm -rf node_modules coverage dist frontend/dist logs/*.log",
    "clean:cache": "rm -rf node_modules/.cache",
    "install:all": "npm install && cd crawler && pip install -r requirements.txt",
    "docs:serve": "http-server docs/ -p 8081",
    "analyze": "npm run test:coverage && npm run lint && npm run format:check",
    "security:audit": "npm audit && npm audit --audit-level moderate",
    "deploy": "npm run build && npm run test && echo 'Ready for deployment'",
    "deploy:staging": "npm run build && echo 'Deploying to staging...'",
    "deploy:production": "npm run build && npm run test:e2e && echo 'Deploying to production...'",
    "prepare": "husky install"
  },
  "keywords": [
    "npb",
    "baseball",
    "dashboard",
    "statistics",
    "japan",
    "sports",
    "analytics"
  ],
  "author": "NPB Dashboard Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.2",
    "axios": "^1.5.0",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "jest-junit": "^16.0.0",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "stylelint": "^15.10.2",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.19.2",
    "@playwright/test": "^1.37.1",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.0",
    "http-server": "^14.1.1",
    "jest-runner-groups": "^2.2.0",
    "babel-jest": "^29.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/npb-dashboard/npb-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/npb-dashboard/npb-dashboard/issues"
  },
  "homepage": "https://npb-dashboard.com"
}