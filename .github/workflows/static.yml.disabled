# KBO 매직넘버 웹서비스 GitHub Pages 배포
name: Deploy KBO Magic Number to Pages

on:
  # main 브랜치에 푸시될 때 트리거 (KBO 데이터 업데이트 후)
  push:
    branches: ["main"]
    paths:
      - 'magic-number/**'  # magic-number 폴더 변경시에만 배포
      - '.github/workflows/static.yml'  # 워크플로우 자체 변경시

  # Actions 탭에서 수동 실행 허용
  workflow_dispatch:

# GitHub Pages에 배포할 권한 설정
permissions:
  contents: read
  pages: write
  id-token: write

# 동시에 하나의 배포만 허용하되, 진행 중인 실행은 취소하지 않음
concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      - name: 📁 저장소 체크아웃
        uses: actions/checkout@v4

      - name: ⚙️ GitHub Pages 설정
        uses: actions/configure-pages@v4

      - name: 📊 배포 파일 준비
        run: |
          echo "🚀 KBO 매직넘버 웹서비스 배포 준비..."
          
          # magic-number 폴더 존재 확인
          if [ ! -d "magic-number" ]; then
            echo "❌ magic-number 폴더를 찾을 수 없습니다."
            exit 1
          fi
          
          # 주요 파일들 존재 확인
          echo "📁 배포할 파일들 확인:"
          echo "  - index.html: $([ -f magic-number/index.html ] && echo '✅' || echo '❌')"
          echo "  - service-data.json: $([ -f magic-number/data/service-data.json ] && echo '✅' || echo '❌')"
          echo "  - kbo-rankings.json: $([ -f magic-number/data/kbo-rankings.json ] && echo '✅' || echo '❌')"
          
          # 히스토리 파일 수 확인
          if [ -d magic-number/history/daily ]; then
            HISTORY_COUNT=$(ls -1 magic-number/history/daily/*.json 2>/dev/null | wc -l)
            echo "  - 일일 히스토리: ${HISTORY_COUNT}개 파일"
          fi
          
          echo "✅ 배포 준비 완료"

      - name: 📦 아티팩트 업로드
        uses: actions/upload-pages-artifact@v3
        with:
          # magic-number 폴더만 GitHub Pages로 배포
          path: './magic-number'

      - name: 🚀 GitHub Pages 배포
        id: deployment
        uses: actions/deploy-pages@v4

      - name: 🎉 배포 완료 알림
        run: |
          echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
          echo "🎯 KBO 매직넘버 웹서비스 배포 완료!"
          echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
          echo "🌐 배포 URL: ${{ steps.deployment.outputs.page_url }}"
          echo "📅 배포 시간: $(TZ='Asia/Seoul' date '+%Y-%m-%d %H:%M')"
          echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
